<%- include("../partials/head.ejs") %>

  <body>
    <div class="details-content">
      <div align="center">
        <br />
        <h4>ID pay from CC: </h4>
        <p>
          <%= ccPayment._id %>
        </p>
      </div>
      <div class="content">

        <table width="80%" id="alignment">
